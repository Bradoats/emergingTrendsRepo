extends layout

block content
  h1 New Message

  form(method="POST" action="/new")
    div
      label(for="user") User:
      input#user(type="text" name="user" required)
    div
      label(for="text") Text:
      textarea#text(type="text" name="text" rows="4" cols="50" required)
    div
      button(type="submit") Submit